<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LeaveManagementSystem</title>

    <!-- Stylesheets -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LeaveManagementSystem.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
            <div class="container">
                <!-- System Title -->
                <a class="navbar-brand fw-bold fs-4" asp-controller="Home" asp-action="Index">
                    🗂️ Leave Management System
                </a>

                <!-- Mobile Toggle Button -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                @* Fetch session values *@
                @{
                    var role = Context.Session.GetString("Role");
                    var name = Context.Session.GetString("Name");
                }

                <div class="collapse navbar-collapse" id="navbarNav">
                    <!-- Left Navigation Links (Role-based) -->
                    <ul class="navbar-nav ms-auto me-3">
                        @if (role == "Employee")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="LeaveRequests" asp-action="EmployeeHome">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="LeaveRequests" asp-action="Apply">Apply</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="LeaveRequests" asp-action="History">History</a>
                            </li>
                        }
                        else if (role == "Manager")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="LeaveRequests" asp-action="ManagerHome">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="LeaveRequests" asp-action="Pending">Pending</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="LeaveRequests" asp-action="History">All Requests</a>
                            </li>
                        }
                    </ul>

                    <!-- Right User Info + Logout -->
                    @if (!string.IsNullOrEmpty(name))
                    {
                        <span class="navbar-text text-white me-2">
                            Welcome, @name
                        </span>
                        <a class="btn btn-sm btn-light" asp-controller="Login" asp-action="Logout">Logout</a>
                    }
                    else
                    {
                        <a class="btn btn-sm btn-outline-light" asp-controller="Login" asp-action="Index">Login</a>
                    }
                </div>
            </div>
        </nav>
    </header>

    <main class="container my-4">
        @RenderBody()
    </main>

    <footer class="bg-light border-top py-3 mt-auto">
        <div class="container text-center text-muted small">
            &copy; 2025 Leave Management System — <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
